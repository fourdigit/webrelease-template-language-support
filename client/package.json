{
  "name": "webrelease-template-lsp",
  "displayName": "WebRelease Template Language Support",
  "description": "Language support for WebRelease template language with syntax highlighting, validation, and code completion",
  "version": "0.1.0",
  "publisher": "webrelease",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webrelease/webrelease-template-lsp"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "webrelease",
    "template",
    "language",
    "lsp"
  ],
  "activationEvents": [
    "onLanguage:webrelease"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "webrelease",
        "aliases": [
          "WebRelease Template",
          "webrelease"
        ],
        "extensions": [
          ".wr",
          ".wrt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "webrelease",
        "scopeName": "text.html.webrelease",
        "path": "./syntaxes/webrelease.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "WebRelease Template LSP",
      "properties": {
        "webrelease.lsp.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter"
        },
        "webrelease.lsp.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.8.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
