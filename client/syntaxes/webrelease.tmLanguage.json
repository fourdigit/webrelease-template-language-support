{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "WebRelease Template",
  "scopeName": "text.html.webrelease",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#expressions"
    },
    {
      "include": "#tags"
    },
    {
      "include": "#html"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.webrelease",
          "begin": "<wr-comment>",
          "end": "</wr-comment>"
        }
      ]
    },
    "expressions": {
      "patterns": [
        {
          "name": "meta.expression.webrelease",
          "begin": "%",
          "end": "%",
          "patterns": [
            {
              "name": "keyword.operator.webrelease",
              "match": "(==|!=|<=|>=|<|>|&&|\\|\\||!|\\+|-|\\*|/|%)"
            },
            {
              "name": "support.function.webrelease",
              "match": "\\b(pageTitle|currentTime|formatDate|isNull|isNotNull|isNumber|number|string|length|substring|indexOf|contains|startsWith|endsWith|toUpperCase|toLowerCase|trim|replace|split|join|round|floor|ceil|abs|min|max|divide|setScale)\\b"
            },
            {
              "name": "variable.other.webrelease",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            {
              "name": "string.quoted.double.webrelease",
              "begin": "\"",
              "end": "\"",
              "patterns": [
                {
                  "name": "constant.character.escape.webrelease",
                  "match": "\\\\."
                }
              ]
            },
            {
              "name": "constant.numeric.webrelease",
              "match": "\\b\\d+(\\.\\d+)?\\b"
            },
            {
              "name": "punctuation.webrelease",
              "match": "[\\[\\]().,]"
            }
          ]
        }
      ]
    },
    "tags": {
      "patterns": [
        {
          "name": "meta.tag.webrelease",
          "begin": "<(wr-(?:if|then|else|switch|case|default|for|break|variable|append|clear|return|error|conditional|cond|comment))(?:\\s|>)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag.webrelease"
            }
          },
          "end": ">",
          "patterns": [
            {
              "include": "#tag-attributes"
            }
          ]
        },
        {
          "name": "meta.tag.webrelease.close",
          "match": "</(wr-(?:if|then|else|switch|case|default|for|break|variable|append|clear|return|error|conditional|cond|comment))>",
          "captures": {
            "1": {
              "name": "entity.name.tag.webrelease"
            }
          }
        }
      ]
    },
    "tag-attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.webrelease",
          "match": "\\b(condition|list|string|times|variable|count|index|value|name|message)\\b"
        },
        {
          "name": "string.quoted.double.webrelease",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.webrelease",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "html": {
      "patterns": [
        {
          "name": "comment.block.html",
          "begin": "<!--",
          "end": "-->"
        },
        {
          "name": "meta.tag.html",
          "begin": "<(?!wr-)/?(?:[a-zA-Z][a-zA-Z0-9]*)?",
          "end": ">",
          "patterns": [
            {
              "name": "entity.other.attribute-name.html",
              "match": "[a-zA-Z][a-zA-Z0-9-]*"
            },
            {
              "name": "string.quoted.double.html",
              "begin": "\"",
              "end": "\"",
              "patterns": [
                {
                  "include": "#expressions"
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
